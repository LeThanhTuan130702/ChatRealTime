
@model ChatRealTime.Models.RegisterVM
<h1 class="text-warning">@TempData["message"]</h1>
<section class="form signup">
    <header>ChatApp Realtime</header>
    <form asp-action="Register" asp-controller="User" enctype="multipart/form-data">
        <div class="error-txt"></div>

        <!--name row-->
        <div class="name-details">
            <div class="field input">
                <label asp-for="@Model.lname">Tên</label>
                <input type="text"  asp-for="@Model.lname" placeholder="Tên" required>
            </div>
            <div class="field input">
                <label asp-for="@Model.fname">Họ</label>
                <input type="text" asp-for="@Model.fname" placeholder="Họ" required>
            </div>


        </div>

        <div class="field input">
            <label asp-for="@Model.Email">Email</label>
            <input type="text" asp-for="@Model.Email" placeholder="Email" required>
        </div>
        <div class="field input">
            <label asp-for="@Model.Password">Mật khẩu</label>
            <input type="password" asp-for="@Model.Password" placeholder="Mật khẩu" required>
            <i class=" fas fa-eye active"></i>
        </div>
        <div class="field image">
            <label asp-for="@Model.Img">Ảnh đại diện</label>
            <input type="file" name="Image" accept="image/x-png,image/jpeg,image/jpg" required>
        </div>
        <div class="field button">
            <input type="submit" value="Bắt đầu chat">
        </div>

        <div class="link">
            Đã có tài khoản?
            <a asp-action="Login" asp-controller="User">Đăng nhập ngay</a>
        </div>

    </form>
</section>
